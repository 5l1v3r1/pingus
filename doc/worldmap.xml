    <nodes>
      <node id="node_1">
	<position>...</position>
	<data>
	  <tube>...</tube>
	</data>
      </node>
      
      <node id="node_2">
	<position>...</position>
	<data>
	  <level>...</level>
	</data>
      </node>
      ...
    </nodes>
    
    <edges>
      <edge id="egde_1" source="1" destination="2"> 
	<!-- The path which connect two nodes -->
	<data>
	  <position>...</position>
