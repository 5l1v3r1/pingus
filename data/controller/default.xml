<pingus-controller>
  <controller-config>
    <standard-pointer><mouse-pointer /></standard-pointer>

    <primary-button><mouse-button button="0"/></primary-button>

    <secondary-button>
      <mouse-button button="2"/>
    </secondary-button>

    <pause-button>
      <key-button key="P"/>
    </pause-button>

    <fast-forward-button>
      <multiple-button>
        <key-button key="F"/>
        <key-button key="SPACE"/>
      </multiple-button>
    </fast-forward-button>

    <armageddon-button>
      <key-button key="A"/>
    </armageddon-button>

    <escape-button>
      <key-button key="ESCAPE"/>
    </escape-button>

    <action-axis>
      <button-axis angle="0">
	<key-button key="B"/>
	<key-button key="C"/>
      </button-axis>
    </action-axis>

    <scroller>
      <axis-scroller speed="1000">
        <button-axis angle="90">
          <key-button key="DOWN"/>
          <key-button key="UP"/>
        </button-axis>      
        <button-axis angle="0">
          <key-button key="RIGHT"/>
          <key-button key="LEFT"/>
        </button-axis>
      </axis-scroller>
    </scroller>

  </controller-config>
</pingus-controller>
